        </ul>
    </div>
    </nav>
  </header>

  <!-- Main Content -->
  <!-- Main Content -->
  <main>
    <h1 class="form-header">Completed Event Information</h1>
    <form action="/completed_events/<%= event_id %>" method="POST" class="event-form">
  
      <!-- Top Section: Event Details -->
      <div class="form-section">
        <h2 class="section-header">Event Details</h2>
  
        <!-- Form Row 1 -->
        <div class="form-row">
          <div class="form-group">
            <label for="eventName" class="form-label">Event Name:</label>
            <input type="text" id="eventName" name="event_name" value="<%= event_request.event_name %>" class="form-input" required>
          </div>
          <div class="form-group">
            <label for="actualDate" class="form-label">Date:</label>
            <input type="date" id="actualDate" name="actual_date" value="<%= event_request.actual_date %>" class="form-input" required>
          </div>
        </div>
  
        <!-- Form Row 2 -->
        <div class="form-row">
          <div class="form-group">
            <label for="startTime" class="form-label">Event Start Time:</label>
            <input type="time" id="startTime" name="event_start_time" value="<%= event_request.event_start_time %>" class="form-input" required>
          </div>
          <div class="form-group">
            <label for="duration" class="form-label">Event Duration (hrs):</label>
            <input type="number" id="duration" name="event_duration" value="<%= event_request.event_duration %>" class="form-input" min="1" required>
          </div>
        </div>
  
        <!-- Form Row 3 -->
        <div class="form-row">
          <div class="form-group">
            <label for="participantsCount" class="form-label">Actual Participants Count:</label>
            <input type="number" id="participantsCount" name="participants_count" class="form-input" min="0" required>
          </div>
          <div class="form-group">
            <label for="expectedParticipants" class="form-label">Expected Participants:</label>
            <div id="expectedParticipants" class="form-static"><%= event_request.expected_participants %></div>
          </div>
        </div>
      </div>
      <br>
      <!-- Bottom Section: Completed Products -->
      <div class="form-section">
        <h2 class="section-header">Production</h2>
  
        <!-- Form Row 5 -->
        <div class="form-row">
          <div class="form-group">
            <label for="completedCollars" class="form-label">Completed Collar Pieces:</label>
            <input type="number" id="completedCollars" name="completed_collar" class="form-input" min="0" required>
          </div>
          <div class="form-group">
            <label for="completedPockets" class="form-label">Completed Pocket Pieces:</label>
            <input type="number" id="completedPockets" name="completed_pocket" class="form-input" min="0" required>
          </div>
        </div>
  
        <!-- Form Row 6 -->
        <div class="form-row">
          <div class="form-group">
            <label for="completedEnvelopes" class="form-label">Completed Envelope Pieces:</label>
            <input type="number" id="completedEnvelopes" name="completed_envelope" class="form-input" min="0" required>
          </div>
          <div class="form-group">
            <label for="completedVests" class="form-label">Completed Vest Pieces:</label>
            <input type="number" id="completedVests" name="completed_vest" class="form-input" min="0" required>
          </div>
        </div>
  
        <!-- Form Row 7 -->
        <div class="form-row">
          <div class="form-group">
            <label for="finishedVests" class="form-label">Finished Vests:</label>
            <input type="number" id="finishedVests" name="finished_vest" class="form-input" min="0" required>
          </div>
        </div>

        <!-- Final Row -->
          <div class="form-row">
            <div class="form-group">
              <label for="status" class="form-label">Event Status:</label>
              <input
                type="text"
                id="status"
                name="event_status"
                class="form-input"
                value="completed"
                readonly
                required
              >
            </div>
      <!-- Submit Button -->
      <div class="form-row">
        <button type="submit" class="form-submit">Submit</button>
      </div>
    </form>
  </main>
  
  
  
