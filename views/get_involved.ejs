<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Request</title>
  <link rel="stylesheet" href="/css/get_involved.styles.css"> <!-- Update the path as needed -->
</head>

<body>
  <!-- Header -->
  <header>
    <nav class="navbar">
      <div class="navbar-brand">
        <a href="/" class="logo-link"><span class="logo-text">Turtle Shelter Project</span></a>
      </div>
      <div class="navbar-collapse">
        <ul class="main-menu">
          <li><a href="/request_event">Request Event</a></li>
          <li><a href="/jens_story">Jen's Story</a></li>
          <li><a href="/our_sponsors">Our Sponsors</a></li>
          <li><a href="/login">Admin Login</a></li>
          <li><button class="btn-secondary" onclick="location.href='/get_involved'">Get Involved</button></li>
          <li><button class="btn-secondary" onclick="location.href='/donate'">Donate</button></li>
        </ul>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main>
    <h1 class="form-header">Volunteer Form</h1>
    <form action="/submit-vounteer" method="POST" class="event-form">
      <!-- Form Row 1 -->
      <div class="form-row">
        <div class="form-group">
          <label for="firstName" class="form-label">First Name:</label>
          <input type="text" id="firstName" name="firstName" class="form-input" required>
        </div>
        <div class="form-group">
          <label for="lastName" class="form-label">Last Name:</label>
          <input type="text" id="lastName" name="lastName" class="form-input" required>
        </div>
      </div>

      <!-- Form Row 2 -->
      <div class="form-row">
        <div class="form-group">
          <label for="phone" class="form-label">Phone:</label>
          <input type="tel" id="phone" name="phone" class="form-input" required>
        </div>
        <div class="form-group">
          <label for="email" class="form-label">Email:</label>
          <input type="email" id="email" name="email" class="form-input" required>
        </div>
      </div>

      <!-- Form Row 3 -->
      <div class="form-row">
        <div class="form-group">
          <label for="eventName" class="form-label">Address:</label>
          <input type="text" id="eventName" name="eventName" class="form-input" required>
        </div>
        <div class="form-group">
          <label for="address" class="form-label">City:</label>
          <input type="text" id="address" name="address" class="form-input" required>
        </div>
      </div>

      <!-- Form Row 4 -->
      <div class="form-row">
        <div class="form-group">
          <label for="city" class="form-label">State:</label>
          <input type="text" id="city" name="city" class="form-input" required>
        </div>
        <div class="form-group">
          <label for="state" class="form-label">Zip Code:</label>
          <input type="text" id="state" name="state" class="form-input" required>
        </div>
      </div>

      <!-- Form Row 5 -->
      <div class="form-row">
        <div class="form-group">
            <label for="eventType" class="form-label">Sewing Level:</label>
            <select id="eventType" name="eventType" class="form-select" required>
              <option value="Sewing">Beginner</option>
              <option value="Non-Sewing">Intermediate</option>
              <option value="Both">Advanced</option>
            </select>
          </div>
          <div class="form-group">
            <label for="duration" class="form-label">Hours available each Month:</label>
            <input type="number" id="duration" name="duration" class="form-input" min="1" required>
          </div>
      </div>

      <!-- Form Row 6 -->
      <div class="form-row">
        <div class="form-group">
          <label class="form-label">Willing to travel out of County:</label>
          <div class="checkbox-group">
            <label for="outOfCountyYes" class="checkbox-label">
              Yes
              <input type="radio" id="outOfCountyYes" name="outOfCounty" value="Yes">
            </label>
            <label for="outOfCountyNo" class="checkbox-label">
              No
              <input type="radio" id="outOfCountyNo" name="outofCounty" value="No">
            </label>
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">Willing to travel out of State:</label>
          <div class="checkbox-group">
            <label for="outOfStateYes" class="checkbox-label">
              Yes
              <input type="radio" id="outOfStateYes" name="outOfState" value="Yes">
            </label>
            <label for="outOfStateNo" class="checkbox-label">
              No
              <input type="radio" id="outOfStateNo" name="outOfState" value="No">
            </label>
          </div>
        </div>
      </div>

      <!-- Form Row 7 -->
      <div class="form-row">
        <div class="form-group">
          <label class="form-label">Willing to teach:</label>
          <div class="checkbox-group">
            <label for="teachYes" class="checkbox-label">
              Yes
              <input type="radio" id="teachYes" name="teach" value="Yes">
            </label>
            <label for="teachNo" class="checkbox-label">
              No
              <input type="radio" id="teachNo" name="teach" value="No">
            </label>
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">Willing to Lead:</label>
          <div class="checkbox-group">
            <label for="leadYes" class="checkbox-label">
              Yes
              <input type="radio" id="leadYes" name="lead" value="Yes">
            </label>
            <label for="leadNo" class="checkbox-label">
              No
              <input type="radio" id="leadNo" name="lead" value="No">
            </label>
          </div>
        </div>
      </div>


      <!-- Form Row 8 (How did you hear about us?) -->
      <div class="form-row">
        <div class="form-group">
          <label for="howDidYouHear" class="form-label">How did you hear about us?</label>
          <select id="howDidYouHear" name="howDidYouHear" class="form-select" required>
            <option value="Friend/Family">Friend/Family</option>
            <option value="Social Media">Social Media</option>
            <option value="Online">Online</option>
            <option value="Local Church">Local Church</option>
            <option value="Event">Event</option>
            <option value="Other">Other</option>
          </select>
        </div>
      </div>


      <!-- Form Row 9 -->
      <div class="form-row">
        <div class="form-group">
          <label for="additionalInfo" class="form-label">What should we know about you:</label>
          <textarea id="additionalInfo" name="additionalInfo" class="form-textarea" rows="4" required></textarea>
        </div>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="submit-btn">Submit</button>
    </form>
  </main
