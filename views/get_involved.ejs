  <!-- Main Content -->
  <main>
    <h1 class="form-header">Volunteer Form</h1>
    <form action="/submit-volunteer" method="POST" class="event-form">
      <!-- Form Row 1 -->
      <div class="form-row">
        <div class="form-group">
          <label for="firstName" class="form-label">First Name:</label>
          <input type="text" id="firstName" name="first_name" class="form-input" required>
        </div>
        <div class="form-group">
          <label for="lastName" class="form-label">Last Name:</label>
          <input type="text" id="lastName" name="last_name" class="form-input" required>
        </div>
      </div>

      <!-- Form Row 2 -->
      <div class="form-row">
        <div class="form-group">
          <label for="phone" class="form-label">Phone:</label>
          <input type="tel" id="phone" name="phone" class="form-input" required>
        </div>
        <div class="form-group">
          <label for="email" class="form-label">Email:</label>
          <input type="email" id="email" name="email" class="form-input" required>
        </div>
      </div>

      <!-- Form Row 3 -->
      <div class="form-row">
        <div class="form-group">
          <label for="address" class="form-label">Address:</label>
          <input type="text" id="address" name="address" class="form-input" required>
        </div>
        <div class="form-group">
          <label for="city" class="form-label">City:</label>
          <input type="text" id="city" name="city" class="form-input" required>
        </div>
      </div>

      <!-- Form Row 4 -->
      <div class="form-row">
        <div class="form-group">
          <label for="state" class="form-label">State (ie. UT):</label>
          <input type="text" id="state" name="state" class="form-input" required>
        </div>
        <div class="form-group">
          <label for="zip" class="form-label">Zip Code:</label>
          <input type="text" id="zip" name="zip" class="form-input" required>
        </div>
      </div>

      <!-- Form Row 5 -->
      <div class="form-row">
        <div class="form-group">
            <label for="sewing_level" class="form-label">Sewing Level:</label>
            <select id="sewing_level" name="sewing_level" class="form-select" required>
              <option value="Sewing">Beginner</option>
              <option value="Non-Sewing">Intermediate</option>
              <option value="Both">Advanced</option>
            </select>
          </div>
          <div class="form-group">
            <label for="monthly_hour_availability" class="form-label">Hours available each Month (estimate):</label>
            <input type="number" id="monthly_hour_availability" name="monthly_hour_availability" class="form-input" min="1" required>
          </div>
      </div>

      <!-- Form Row 6 PRUEBA -->
      <div class="form-row">
        <div class="form-group">
          <label for="outOfCountyYes" class="form-label">Willing to travel out of County:</label>
          <select id="outOfCountyYes" name="willing_to_travel_county" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
          </select>
        </div>
        <div class="form-group">
          <label for="outOfStateYes" class="form-label">Willing to travel out of State:</label>
          <select id="outOfStateYes" name="willing_to_travel_state" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
          </select>
        </div>
      </div>

      <!-- Form Row 7 -->
      <div class="form-row">
        <div class="form-group">
          <label for="teachYes" class="form-label">Willing to teach:</label>
          <select id="teachYes" name="willing_to_teach" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
          </select>
        </div>
        <div class="form-group">
          <label for="leadYes" class="form-label">Willing to Lead:</label>
          <select id="leadYes" name="willing_to_lead" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
          </select>
        </div>
      </div>

      <!-- Form Row 8 (How did you hear about us?) -->
      <div class="form-row">
        <div class="form-group">
          <label for="soure" class="form-label">How did you hear about us?</label>
          <select id="soure" name="soure" class="form-select" required>
            <option value="Friend/Family">Friend/Family</option>
            <option value="Social Media">Social Media</option>
            <option value="Online">Online</option>
            <option value="Local Church">Local Church</option>
            <option value="Event">Event</option>
            <option value="Other">Other</option>
          </select>
        </div>
      </div>


      <!-- Form Row 9 -->
      <div class="form-row">
        <div class="form-group">
          <label for="additionalInfo" class="form-label">What should we know about you:</label>
          <textarea id="additionalInfo" name="details" class="form-textarea" rows="4" required></textarea>
        </div>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="submit-btn">Submit</button>
    </form>

