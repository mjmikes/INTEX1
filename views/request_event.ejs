<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Request</title>
  <link rel="stylesheet" href="/css/request_event.styles.css"> <!-- Update the path as needed -->
</head>

<body>
  <!-- Header -->
  <header>
    <nav class="navbar">
      <div class="navbar-brand">
        <a href="/" class="logo-link"><span class="logo-text">Turtle Shelter Project</span></a>
      </div>
      <div class="navbar-collapse">
        <ul class="main-menu">
          <li><a href="/request_event">Request Event</a></li>
          <li><a href="/jens_story">Jen's Story</a></li>
          <li><a href="/our_sponsors">Our Sponsors</a></li>
          <li><a href="/login">Admin Login</a></li>
          <li><button class="btn-secondary" onclick="location.href='/get_involved'">Get Involved</button></li>
          <li><button class="btn-secondary" onclick="location.href='/donate'">Donate</button></li>
        </ul>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main>
    <h1 class="form-header">Event Request Form</h1>
    <form action="/submit-event-request" method="POST" class="event-form">
      <div class="form-group">
        <!-- First Name -->
        <label for="firstName" class="form-label">First Name:</label>
        <input type="text" id="firstName" name="firstName" class="form-input" required>
      </div>

      <div class="form-group">
        <!-- Last Name -->
        <label for="lastName" class="form-label">Last Name:</label>
        <input type="text" id="lastName" name="lastName" class="form-input" required>
      </div>

      <div class="form-group">
        <!-- Phone -->
        <label for="phone" class="form-label">Phone:</label>
        <input type="tel" id="phone" name="phone" class="form-input" required>
      </div>

      <div class="form-group">
        <!-- Email -->
        <label for="email" class="form-label">Email:</label>
        <input type="email" id="email" name="email" class="form-input" required>
      </div>

      <!-- Event Name -->
      <div class="form-group">
        <label for="eventName" class="form-label">Event Name:</label>
        <input type="text" id="eventName" name="eventName" class="form-input" required>
      </div>

      <!-- Event Type -->
      <div class="form-group">
        <label for="eventType" class="form-label">Event Type:</label>
        <select id="eventType" name="eventType" class="form-select" required>
          <option value="Sewing">Sewing</option>
          <option value="Non-Sewing">Non-Sewing</option>
          <option value="Both">Both</option>
        </select>
      </div>

      <!-- Address, City, State, Zip -->
      <div class="form-group">
        <label for="address" class="form-label">Address:</label>
        <input type="text" id="address" name="address" class="form-input" required>
      </div>

      <div class="form-group">
        <label for="city" class="form-label">City:</label>
        <input type="text" id="city" name="city" class="form-input" required>
      </div>

      <div class="form-group">
        <label for="state" class="form-label">State:</label>
        <input type="text" id="state" name="state" class="form-input" required>
      </div>

      <div class="form-group">
        <label for="zip" class="form-label">Zip Code:</label>
        <input type="text" id="zip" name="zip" class="form-input" required>
      </div>

      <!-- Possible Dates -->
      <div class="form-group">
        <label for="possibleDate1" class="form-label">Possible Date 1:</label>
        <input type="date" id="possibleDate1" name="possibleDate1" class="form-input" required>
      </div>

      <div class="form-group">
        <label for="possibleDate2" class="form-label">Possible Date 2:</label>
        <input type="date" id="possibleDate2" name="possibleDate2" class="form-input">
      </div>

      <!-- Event Start Time -->
      <div class="form-group">
        <label for="startTime" class="form-label">Event Start Time:</label>
        <input type="time" id="startTime" name="startTime" class="form-input" required>
      </div>

      <!-- Event Duration -->
      <div class="form-group">
        <label for="duration" class="form-label">Event Duration (hrs):</label>
        <input type="number" id="duration" name="duration" class="form-input" min="1" required>
      </div>

      <!-- Expected Advanced Sewers -->
      <div class="form-group">
        <label for="advancedSewers" class="form-label">Expected Advanced Sewers:</label>
        <input type="number" id="advancedSewers" name="advancedSewers" class="form-input" min="0" required>
      </div>

      <!-- Sewing Machines Available -->
      <div class="form-group">
        <label for="sewingMachines" class="form-label">Sewing Machines Available:</label>
        <input type="number" id="sewingMachines" name="sewingMachines" class="form-input" min="0" required>
      </div>

      <!-- Expected Participants -->
      <div class="form-group">
        <label for="participants" class="form-label"># of Expected Participants:</label>
        <input type="number" id="participants" name="participants" class="form-input" min="1" required>
      </div>

      <!-- Event Description -->
      <div class="form-group">
        <label for="description" class="form-label">Event Description:</label>
        <textarea id="description" name="description" class="form-textarea" rows="4" cols="50" required></textarea>
      </div>

      <!-- Jen Story -->
      <div class="form-group">
        <label class="form-label">Jen Story:</label>
        <div class="checkbox-group">
          <label for="jenStoryYes" class="checkbox-label">
            <input type="radio" id="jenStoryYes" name="jenStory" value="Yes">
            Yes
          </label>
          <label for="jenStoryNo" class="checkbox-label">
            <input type="radio" id="jenStoryNo" name="jenStory" value="No">
            No
          </label>
        </div>
      </div>

      <!-- Available Tables -->
      <div class="form-group">
        <label for="roundTables" class="form-label">Available Round Tables:</label>
        <input type="number" id="roundTables" name="roundTables" class="form-input" min="0">
      </div>

      <div class="form-group">
        <label for="rectangleTables" class="form-label">Available Rectangle Tables:</label>
        <input type="number" id="rectangleTables" name="rectangleTables" class="form-input" min="0">
      </div>

      <!-- # of Kids under 10 -->
      <div class="form-group">
        <label for="kidsUnder10" class="form-label"># of Kids Under Age 10:</label>
        <input type="number" id="kidsUnder10" name="kidsUnder10" class="form-input" min="0">
      </div>

      <!-- Event Space Size -->
      <div class="form-group">
        <label for="spaceSize" class="form-label">Event Space Size:</label>
        <input type="text" id="spaceSize" name="spaceSize" class="form-input" required>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="submit-btn">Submit</button>
    </form>
  </main>

  <!-- Footer -->
  <footer>
    <div class="footer">
      <p>&copy; 2024 Turtle Shelter Project. All rights reserved.</p>
    </div>
  </footer>
</body>

</html>
